/* miniprogram/pages/welcome/welcome.wxss */
.container{
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: column;
}
.swiper {
   background-color: red;
   width: 100vw;
   height: 100vh;
}

.swiper .item {
   background-color: rgba(255, 236, 68, 0.822);
   width: 300px;
   height: 1000px;
}

.swiper .item image {
   display: block;
   background-color: yellow;
}
.empty{
   flex: 2;
   display:flex;
   flex-direction: column;
   min-height: 100%;
   margin-bottom: 500px;
}
.footer {
   width: 100%;
   flex-basis: fit-content;
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
   border-top: 1px solid #ddd;
   font-size: 10rpx;
   padding: 20rpx 30rpx;
   background: rgb(246, 246, 246);
}

.footer button{
   flex-basis: 120px;
   height: 40px;
   display: flex;
   justify-content: center;
   align-items: center;
   background-color: rgb(88, 189, 101);
   border-radius: 3px;
   margin-top: 5px;
   margin-left: 5px;
   margin-right: 5px;
   font-size: 17px;
}
.footer button:active{
   background-color: rgb(218, 218, 218);
}
